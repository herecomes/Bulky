@page
@model BulkyWeb_Razor.Pages.Categories.IndexModel

<div class="container">
	<div class="row pt-4">
		<div class="col-6 pb-3">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/categories/create" class="btn btn-primary">
				Create new Category
			</a>
		</div>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Display Order
			</th>
			<th>
				Display Order
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.CategoryList.OrderByDescending(u => u.DisplayOrder))
		{
			<tr>
				<td>
					@obj.Name
				</td>
				<td>
					@obj.DisplayOrder
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
						<a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-delete mx-2">Delete</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>