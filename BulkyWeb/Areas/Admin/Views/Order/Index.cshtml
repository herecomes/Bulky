@{
	var status = Context.Request.Query["status"];

	var inprocess = "";
	var pending = "";
	var completed = "";
	var approved = "";
	var all = "";

	switch (status){
		case "inprocess":
			inprocess = "active text-bg-success";
			break;
		case "pending":
			pending = "active text-bg-success";
			break;
		case "completed":
			completed = "active text-bg-success";
			break;
		case "approved":
			approved = "active text-bg-success";
			break;

		default:
			all = "active text-bg-success";
			break;
	}
}

